<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/modal_background"
    android:elevation="6dp"
    android:clipToPadding="false"
    android:layout_margin="12dp">

    <!-- Persona Title Input Field -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/input_field_background"
        android:elevation="4dp"
        android:paddingVertical="14dp"
        android:paddingHorizontal="12dp"
        android:layout_marginBottom="16dp"
        android:clipToOutline="true"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="29dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="Persona Title Icon"
            android:src="@drawable/ic_send_icon"
            app:tint="@color/accent_dark_light_40" />

        <EditText
            android:id="@+id/editTextPersonaTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Enter Persona Title"
            android:textColor="@color/accent_dark"
            android:padding="8dp"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Persona Description Input Field -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/input_field_background"
        android:elevation="4dp"
        android:paddingVertical="14dp"
        android:paddingHorizontal="12dp"
        android:layout_marginBottom="12dp"
        android:clipToOutline="true">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_profile_placeholder"
            android:contentDescription="Persona Description Icon"
            app:tint="@color/accent_dark_light_40" />

        <EditText
            android:id="@+id/editTextPersonaDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Enter Persona Description"
            android:textColor="@color/primaryText"
            android:padding="8dp"
            android:textSize="16sp"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

</LinearLayout>


