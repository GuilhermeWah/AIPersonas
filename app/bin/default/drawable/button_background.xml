<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primaryBackground" />
            <corners android:radius="8dp" />
            <stroke
                android:width="2dp"
                android:color="@color/inputBorder" />
            <padding
                android:left="16dp"
                android:top="10dp"
                android:right="16dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/editButton" />
            <corners android:radius="8dp" />
            <stroke
                android:width="2dp"
                android:color="@color/inputBorder" />
        </shape>
    </item>

    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/inputBorder" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
